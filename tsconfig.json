{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "moduleResolution": "node",
      "target": "es2017",
      "allowJs": true,
      "strict": true,
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,

    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }